/****************************************************
** GLOBAL
** Element Names (h1-h6,p,div,em etc)
*****************************************************/
*{margin:0;padding:0;}

body{
	font:0.9em/1em Helvetica,Verdana,Arial,sans-serif;
	background-color: #eee;
}

h1,h2,h3,h4,h5,h6{font-size:1em;}

a:link{}

a:visited{}

a:visited,a:hover{text-decoration:none;}

a img{border:0;}

h1,h2,h3,h4,h5,h6,
p,ol,ul,dl{margin:0 0 15px 0;}

p,dl {
	line-height:1.45em;
}


hr{
	border:0;
	border-bottom:1px solid #ccc;
	margin:15px 0;
	float:none;
	clear:both;
}

ol,ul{list-style-position:inside;}


/****************************************************
** Generic Classes
** Class names
*****************************************************/
.small{font-size:0.9em;}
.smaller{font-size:0.8em;}
.left{text-align:left;}
.right{text-align:right;}
.center{text-align:center;}
.clear{float:none;clear:both;display:block;}
span.clear{line-height:0;height:0;font-size:0;}




/****************************************************
** Content
** Content-specific (.content ...)
*****************************************************/
.content {}
.content > .inner{}

/* =========== */
/* = Wrapper = */
/* =========== */
.wrapper-inner {
	padding:15px;
	background-color: #fff;
}
/* ========== */
/* = Header = */
/* ========== */
#header .navigation {}
#header .navigation-inner {
	padding:0;
}
#header .navigation li {
	float:left;
	margin:1px;
}
#header .navigation li li{
	float:none;
}
#header .navigation a {
	display:block;
	padding:10px 15px;
}
.header-inner {
	z-index:1;
}
/* ======== */
/* = Body = */
/* ======== */

/* =========== */
/* = Primary = */
/* =========== */

/* ============= */
/* = Secondary = */
/* ============= */
#secondary  {
	font-size:0.85em;
}

#secondary .navigation li a {
	text-decoration:underline;
}

/* ============ */
/* = Tertiary = */
/* ============ */


/* ========== */
/* = Footer = */
/* ========== */
#footer {
	color:#999;
	font-size:0.85em;
}
#footer .navigation li {
	display:inline;
	margin:0 10px;
}
#footer .navigation a {
	color:#999;
	text-decoration:underline;
}
#credits,
#credits a {
	width:52px;
	height:41px;
}
#credits {
	margin:0;
	padding:0;
	line-height:1em;
}
#credits a {
	display:block;
	text-indent:-9999em;
	outline:none;
	background: url('../images/octavodia_logo.png') no-repeat top left;
	
}
/****************************************************
** Data Types (Generic)
** .heading, .description, .image ...
*****************************************************/
.description,
.date,
.meta,
.copyright {
	color:#999;
	font-size:0.9em;
}
.description a,
.date a,
.meta a {
	color:#666;
	text-decoration:underline;
}
/****************************************************
** Sections
** 
*****************************************************/
.section, .inner {
	position:relative;
}
.section > .inner,
.section > form > .inner{
	padding:15px;
}

/* ============== */
/* = Navigation = */
/* ============== */
#header .navigation,
#footer .navigation {
	z-index:1;
	
	font-family: Verdana;
}

.navigation,
.navigation ul,
.navigation ol {
	z-index:1;
	line-height:1em;
}
.navigation ul,
.navigation ol {
	list-style:none;
	margin:0;
}

.navigation li {
	z-index:1;
	position:relative;
}
.navigation li:hover ul,
.navigation li:hover ol {
	display:block;
}
.navigation li ul,
.navigation li ol,
.has-js .navigation li:hover ul,
.has-js .navigation li:hover ol {
	display:none;
	position:absolute;
	z-index:1;
	padding:5px;
	
	background-color: red;
}

.navigation li li {
	float:none;
	display:block;
}
/* ======== */
/* = Logo = */
/* ======== */
.logo {
	line-height:0;
}
.logo a {
	text-decoration:none;
	outline:none;
}
.logo a img {
	border:0;
}
.logo a span {
	position:absolute;
	top:0;
	left:0;
	visibility:hidden;	
}
/* ========== */
/* = Search = */
/* ========== */

/* ============= */
/* = Breacrumb = */
/* ============= */

.breadcrumb {
	font-size:0.8em;
}
.breadcrumb .heading {
	display:none;
}
.breadcrumb,
.breadcrumb a {
	color:#999;
}
.breadcrumb a {
	text-decoration:underline;
}
.breadcrumb a:hover {
	text-decoration:none;
	
}
.breadcrumb ol,
.breadcrumb li {
	display:inline;
	margin:0;
}

.breadcrumb li.last a {
	color:#666;
	text-decoration:none;
}

/* ================= */
/* = Members/Login = */
/* ================= */

/* ==================== */
/* = Index (Articles) = */
/* ==================== */

/* ======== */
/* = Text = */
/* ======== */
.text {
	color:#333;
	line-height:1.4em;
}
.text h1,
.text h2,
.text h3,
.text h4,
.text h5,
.text h6
 {
	font-weight:normal;
}
.text h6 {
	font-size:1.1em;
}

.text .heading {
	font-size:1.8em;
}
.text .description {
	font-size:1.45em;
}
.text h4 {
	font-size:1.2em;
}
.text h5 {
	font-size:1.15em;
}
.text h6 {
	font-size:1.1em;
}


